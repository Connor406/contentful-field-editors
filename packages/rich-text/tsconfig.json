{
  "extends": "../../tsconfig.json",
  "include": ["src", "types"],
  "exclude": ["build/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "noImplicitAny": false,
    "allowJs": true,
    "jsx": "react",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "linterOptions": {
    "exclude": ["src/**", "build/**/*"]
  }
}
